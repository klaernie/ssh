# forwaring X11 and agent to all targets
ForwardX11 yes
ForwardX11Trusted yes
ForwardAgent yes

Compression=yes

#avoid gssapi-auth as it confuses quest @ sap
GSSAPIAuthentication no

#I'd like to be able to read my known hosts
HashKnownHosts no

# avoid to confirm every new key - especially @sap
StrictHostKeyChecking no

# Control Master:
# store sockets @ .ssh, try to reuse an existing connection
# or open a totally new one if required
controlpath ~/.ssh/master:%r@%h:%p
controlmaster auto

# static hosts @ ak-online
#####################################################################################
host mainframe
hostname mainframe.ak-online.be
User kandre

host hive
hostname hive.ak-online.be
user root

host rion
hostname rion.saori-chan.de
user root

host maha
hostname maha.die-sisas.de
user root

host mia
hostname mia.ak-online.be
# all or nothin - as mia has only 1 ipv6
AddressFamily inet
port 443
ProxyCommand proxy-script %h %p

# a ipv6-problem needs some help
# git.ak is a cname to port1.mia, but port1 is only ipv4 with apache on :443 and :80 
# as git tries to connect to the running ssh-daemon it will fail if it tries by IPv6
# due to the fact, that mia got only one IPv6 address
# so the hack is, to force the hostname to mia's management
host git.ak-online.be
hostname mia.ak-online.be
user git
AddressFamily inet
port 443
ProxyCommand proxy-script %h %p

host vpn.ak-online.be
hostname vpn.ak-online.be
user root
port 443
ProxyCommand proxy-script %h %p

host vpn-tunnel
hostname vpn.ak-online.be
user root
port 443
ProxyCommand proxy-script %h %p
Tunnel ethernet
TunnelDevice 17:17
LocalCommand ifconfig tap17 0.0.0.0 up; dhclient tap17; /etc/init.d/bind9 restart

